{
    "include": ["src/**/*"],
    "exclude": ["node_modules/*", "public/*"],
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "resolveJsonModule": true,
        "allowJs": true,
        "checkJs": true,
        "isolatedModules": true
    },
    "types": ["svelte", "vitest/globals"]
}
